<%- include ./layout/header %>
<style>
    html {
        width: 100%;
        height: 100%;
        overflow: hidden;
        font-style: sans-serif;
    }

    body {
        width: 100%;
        height: 100%;
        font-family: 'Open Sans', sans-serif;
        margin: 0;
        background: url('img/bg2.png') no-repeat;
    }

    #login {
        position: absolute;
        top: 50%;
        left: 50%;
        margin: -150px 0 0 -150px;
        width: 300px;
        height: 300px;
    }

    h1 {
        font-size: 2em;
        margin: 0.67em 0;
    }

    input {
        width: 278px;
        height: 18px;
        margin-bottom: 10px;
        outline: none;
        padding: 10px;
        font-size: 13px;
        color: #fff;
        text-shadow: 1px 1px 1px;
        border-top: 1px solid #312E3D;
        border-left: 1px solid #312E3D;
        border-right: 1px solid #312E3D;
        border-bottom: 1px solid #56536A;
        border-radius: 4px;
        background-color: #2D2D3F;
    }

    .but {
        width: 300px;
        min-height: 20px;
        display: block;
        /* background-color: cadetblue;
        border-color: cadetblue; */
        background-color: cadetblue;
        border: 1px solid cadetblue;
        color: #fff;
        padding: 9px 14px;
        font-size: 15px;
        line-height: normal;
        border-radius: 5px;
        margin: 0;
    }

    .resiger-tip {
        cursor: pointer;
        position: relative;
    }

    .resiger-tip:hover .prompt-box {
        display: inline-block;

    }

    .resiger-tip .prompt-box {
        background-color: white;
        border: solid 1px black;
        text-align: left;
        padding-left: 10px;
        font-size: 12px;
        position: absolute;
        right: -220px;
        display: none;
        z-index: 333;
        color: #888;
        width: 200px;
    }

    #img-code svg {
        height: 38px;
    }
</style>
<div id="login">
    <h1></h1>
    <form class="layui-form layui-form-pane" action="">
        <input type="text" id="email" required="required" placeholder="请输入游戏名(5位以内，将作为游戏名)" name="email"></input>
        <input type="password" required="required" placeholder="密码" id="pwd" name="pwd"></input>
        <div class="layui-row">
            <div class="layui-col-md6">
                <input type="text" style="width: 100%;" id="emailCode" required="required" placeholder="验证码"
                    name="emailCode"></input>
            </div>
            <div class="layui-col-md6">
                <a style="line-height: 40px;width:inherit;color:teal;cursor: pointer;" onclick="sendEmailCodeFunc()"
                    id='sub-code'>获取验证</a>
                <div id="img-code" style="display: none;" class="layui-col-sm6">
                </div>
            </div>
        </div>
        <button type="submit" lay-submit="" lay-filter="login" id='login-sub'
            class="but layui-btn layui-btn-primary">立即登录</button>
        <div class="layui-input-block" style="margin-top: 5px;">
            <span>还没账号？</span><span class="resiger-tip"><a href="javascript:;" style="color: teal;" class="">如何登录</a> .
                <span class="prompt-box">tip:输入你的账号密码，没有注册过则会自动创建账号并登录</span>
            </span>
            <!-- <input type="checkbox" checked="" name="save_pwd" lay-skin="switch" lay-filter="switchPwd"
                    lay-text="记住密码|否"> -->
        </div>
    </form>
</div>
<%- include ./layout/footer %>

